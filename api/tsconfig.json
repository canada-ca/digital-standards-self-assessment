{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // "resolveJsonModule": true, 
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true    
  },
  "include": [
    "./src/**/*.ts",
   ],
  "exclude": [
    "./node_modules"
  ]
}
